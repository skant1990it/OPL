<body class="container">
<header>
        <% include ../admin/addplayer %>
    </header>

    <form id="scoreform"  name="scoreform" method="POST">
     <div class="row">
            <div class="col-sm-6">
            <input type="button" value="Start Match" id="match_start">
       </div>
       </div>
        <div class="row">
