 <head>
    <% include ../partials/head %>
</head>
<body class="container">
<header>
        <% include ../admin/addplayer %>
    </header>
    <main>
        <div class="row">
            <div class="col-sm-6">
            
                <div class="player" id="bowler">
                <h3>
                <input type="button" value="Bowler"></h3>
                
              <% for(var i=1; i <=11; i++) { %>
                 <input type="button" class="player_btn" value="Bowler <%= i %>">
                 <% } %>
                </div>
                
            </div>
            <div class="col-sm-6">
                
                <div class="player" id="batsman">
                  <h3>
                <input type="button" value="Batsman"></h3>
                
              <% for(var i=1; i <=11; i++) { %>
                 <input type="button" class="player_btn" value= "Batsman<%= i %>">
                 <% } %>
                </div>

            </div>
        </div>
        
        <div  class="col-sm-12" id="scoringdiv">
        <div class="row">
            <div class="col-sm-12">
            
                <div class="player" id="over">
                  <h3 >
                <input class="label_btn" type="button" value="Over"></h3>
                <% for(var i=1; i <=11; i++) { %>
                 <input type="button" class="over_btn" value= <%= i %>>
                 <% } %>
                </div>
                
            </div>
            
        </div>
        
         <div class="row">
            <div class="col-sm-12">
            
                <div class="player" id="score">
                <table id="score_table">
                <tr><th>  Balls     </th>
                <th>  1         </th>
                  <th>      2     </th>
                    <th>      3     </th>
                      <th>        4   </th>
                        <th>        5   </th>
                          <th>       6    </th>
                            <th>      Dot     </th>
                              <th>        Wicket   </th>
                                <th>      Wide     </th>
                                  <th>    No Ball       </th>
                                  <th></th>
                </tr>
                <tr><td>1</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                 <td><input type="button" value="OK"</td>
                 </tr>
                  <tr><td>2</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                  <td><input type="button" value="OK"</td>
                 </tr>
                  <tr><td>3</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                  <td><input type="button" value="OK"</td>
                 </tr>
                  <tr><td>4</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                  <td><input type="button" value="OK"</td>
                 </tr>
                  <tr><td>5</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                  <td><input type="button" value="OK"</td>
                 </tr>
                  <tr><td>6</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><input type="checkbox"  value= <%= i %>></td>
                
                 <% } %>
                  <td><input type="button" value="OK"</td>
                 </tr>
                 
                </table>
                
                </div>
                
            </div>
            
        </div>
        </div>
        
        <div class="row">
            <div class="col-sm-6">
            
                <div class="player" id="batting">
                	<div class="run">
                	<h4>Batsman 1</h4>
                	</div>
                	<div class="run">
                	<h4>Batsman 2</h4>
                	</div>
                	
                	<div class="summary">
                	
                	<h5>Team Name</h5></br>
                	
                
                	<h5>Total Wides</h5></br>
                	<h5>Total No Balls</h5></br>
                	<h5>Total Extras</h5></br>
                	<h5>Total Wickets</h5></br>
                		<h5>Total Runs</h5>
                	
                </div>
                </div>
                
            </div>
            <div class="col-sm-6">
                
                <div class="player" id="bowling">
                  <% for(var i=1; i <=11; i++) { %>
                <input type="button" class="bowler_name" value="bowler<%= i %>">
                   <% for(var j=1; j <=4; j++) { %>
                
                <input type="text" class="runs_given">
                
                 <% } %>
                  <% } %>
                </div>

            </div>
        </div>
        
        
    </main>
     <footer>
        <% include ../partials/footer %>
    </footer>
 
 <div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</div>
 