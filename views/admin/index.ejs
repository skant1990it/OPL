
<body class="container">
<header>
        <% include ../admin/addplayer %>
    </header>
    <main>
        <div class="row">
            <div class="col-sm-6">
            
                <div class="player" id="bowler">
                <h3>
                <input type="button" value="Bowler"></h3>
                
              <% for(var i=0; i <bowlers_array.length; i++) { %>
                 <input type="button" class="player_btn bowler" value="<%=bowlers_array[i].name %>" id=<%=bowlers_array[i].id%>>
                 <% } %>
                </div>
                
            </div>
            <div class="col-sm-6">
                
                <div class="player" id="batsman">
                  <h3>
                <input type="button" value="Batsman"></h3>
                
              <% for(var i=0; i <batsman_array.length; i++) { %>
                 <input type="button" class="player_btn batsman" value= "<%=batsman_array[i].name %>" id=bat<%=batsman_array[i].id%>>
                 <% } %>
                </div>

            </div>
        </div>
        
        <div  class="col-sm-12" id="scoringdiv">
        <div class="row">
            <div class="col-sm-12">
            
                <div class="player" id="over">
                  <h3 >
                <input class="label_btn" type="button" value="Over"></h3>
                <% for(var i=1; i <=11; i++) { %>
                <% if(i==1){ %>
                <input type="button" class="over_btn active " value= <%= i %> id=over<%= i %>>
               <% }else{ %>
                 <input type="button" class="over_btn " value= <%= i %> id=over<%= i %>>
                <% }%>
                 <% } %>
                </div>
                
            </div>
            
        </div>
        
         <div class="row">
            <div class="col-sm-12">
            
                <div class="player" id="score">
                <table id="score_table" name="score_table">
                <tr><th>  Balls     </th>
                <th>  1         </th>
                  <th>      2     </th>
                    <th>      3     </th>
                      <th>        4   </th>
                        <th>        5   </th>
                          <th>       6    </th>
                            <th>      Dot     </th>
                              <th>        Wicket   </th>
                                <th>      Wide     </th>
                                  <th>    No Ball       </th>
                                  <th></th>
                </tr>
                <tr id="1" >
                <td>1</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><% if(i<=7){ %>
                 <input type="radio"  name="runScored1" class="overball ball1" checkclass="1" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball1" checkclass="1" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 <% } %>
                 <td><input type="button" value="OK" class ="ball1" checkclass="1" id="ball1"></td>
                 </tr>
                 
                  <tr id="2"><td>2</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                  <td><% if(i<=7){ %>
                 <input type="radio"  name="runScored2" class="overball ball2" checkclass="2" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball2" checkclass="2" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 <% } %>
                  <td><input type="button" value="OK"  class ="ball2" checkclass="2" id="ball2"></td>
                 </tr>
                 
                 
                  <tr><td id="3">3</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                   <td><% if(i<=7){ %>
                 <input type="radio" name="runScored3" class="overball ball3" checkclass="3" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball3" checkclass="3" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 
                 <% } %>
                  <td><input type="button" value="OK" class ="ball3" checkclass="3" id="ball3"></td>
                 </tr>
                 
                 
                  <tr><td id="4">4</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                 <td><% if(i<=7){ %>
                 <input type="radio" name="runScored4" class="overball ball4" checkclass="4" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball4" checkclass="4" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 <% } %>
                  <td><input type="button" value="OK"  class ="ball4" checkclass="4" id="ball4"></td>
                 </tr>
                 
                 
                  <tr><td id="5">5</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                   <td><% if(i<=7){ %>
                 <input type="radio" name="runScored5" class="overball ball5" checkclass="5" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball5" checkclass="5" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 <% } %>
                  <td><input type="button" value="OK"  class ="ball5" checkclass="5" id="ball5"></td>
                 </tr>
                 
                 
                  <tr><td id="6">6</td>
                 <% for(var i=1; i <=10; i++) { %>
                
                  <td><% if(i<=7){ %>
                 <input type="radio" name="runScored6" class="overball ball6" checkclass="6" value= <%= i %> id=<%=i %>>
                 <% } else{%>
                  <input type="checkbox"  class="overball ball6" checkclass="6" value= <%= i %> id=<%=i %>>
                 <% } %>
                 </td>
                
                 <% } %>
                  <td><input type="button" value="OK" class ="ball6"  checkclass="6" id="ball6"></td>
                 </tr>
                 
                </table>
                
                </div>
                
            </div>
            
        </div>
        </div>
        
        <div class="row">
            <div class="col-sm-6">
            
                <div class="player" id="batting">
                	<div class="run">
                	<h4>Batsman 1</h4>
                	</div>
                	<div class="run">
                	<h4>Batsman 2</h4>
                	</div>
                	
                	<div class="summary">
                	
                	<h5>Team Name</h5></br>
                	
                
                	<h5>Total Wides</h5></br>
                	<h5>Total No Balls</h5></br>
                	<h5>Total Extras</h5></br>
                	<h5>Total Wickets</h5></br>
                		<h5>Total Runs</h5>
                	
                </div>
                </div>
                
            </div>
            <div class="col-sm-6">
                
                <div class="player" id="bowling">
                  <% for(var i=1; i <=11; i++) { %>
                <input type="button" class="bowler_name" value="bowler<%= i %>">
                   <% for(var j=1; j <=4; j++) { %>
                
                <input type="text" class="runs_given">
                
                 <% } %>
                  <% } %>
                </div>

            </div>
        </div>
        
        
    </main>
     <footer>
        <% include ../partials/footer %>
    </footer>
 
 <div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</div>
 